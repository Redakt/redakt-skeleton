@model RedaktSkeleton.ViewModels.Components.Hero
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold" rx-content="@Model.Title"></h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4" rx-content="@Model.LeadText" rx-if-empty="@EmptyAction.RemoveTag"></p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a rx-href="@Model.PrimaryCallToAction" rx-href-if-empty="@EmptyAction.RemoveTag" class="btn btn-primary btn-lg px-4 gap-3">@Model.PrimaryCallToAction?.Title</a>
            <a rx-href="@Model.SecondaryCallToAction" rx-href-if-empty="@EmptyAction.RemoveTag" class="btn btn-outline-secondary btn-lg px-4">@Model.SecondaryCallToAction?.Title</a>
        </div>
    </div>
</div>